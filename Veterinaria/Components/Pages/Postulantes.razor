@page "/postulantes"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using Veterinaria.Models
@inject VeterinariaDbContext DbContext

<div class="d-flex justify-content-between mb-4 align-items-center">
    <h3 class="text-primary">
        <i class="bi bi-clipboard-heart-fill me-2"></i>Lista de Postulantes
    </h3>
    <a href="/agregar-postulante" class="btn btn-warning text-dark shadow-sm">
        <i class="bi bi-person-plus-fill me-1"></i> Nuevo Postulante
    </a>
</div>

@if (lista == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nombre Completo</th>
                    <th>Contacto</th>
                    <th>Estado</th>
                    <th>Preferencia</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in lista)
                {
                    bool yaAdopto = idsPostulantesConAdopcion.Contains(p.IdPostulante);

                    <tr class="@(yaAdopto ? "table-success" : "")">
                        <td class="fw-bold">@p.NombreCompleto</td>
                        <td><small>@p.Direccion <br /> @p.Telefono</small></td>
                        <td>
                            @if (yaAdopto)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Adoptó</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">En espera</span>
                            }
                        </td>
                        <td>@p.PreferenciaMascota</td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a href="/agregar-postulante/@p.IdPostulante" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                @if (!yaAdopto)
                                {
                                    <button class="btn btn-sm btn-outline-danger ms-1" @onclick="() => Eliminar(p.IdPostulante)">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Postulante> lista;
    private List<int> idsPostulantesConAdopcion = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarLista();
    }

    private async Task CargarLista()
    {
        lista = await DbContext.Postulantes.OrderBy(p => p.NombreCompleto).ToListAsync();

        // Obtener lista de IDs de personas que ya tienen registro en Adopciones
        idsPostulantesConAdopcion = await DbContext.Adopcions
            .Where(a => a.IdPostulante != null) // 1. Filtramos los que no sean nulos
            .Select(a => a.IdPostulante.Value)  // 2. Extraemos el valor seguro (.Value)
            .ToListAsync();
    }

    private async Task Eliminar(int id)
    {
        var item = await DbContext.Postulantes.FindAsync(id);
        if (item != null)
        {
            DbContext.Postulantes.Remove(item);
            await DbContext.SaveChangesAsync();
            await CargarLista();
        }
    }
}