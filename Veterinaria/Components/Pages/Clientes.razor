@page "/clientes"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using Veterinaria.Models
@inject VeterinariaDbContext DbContext

<div class="d-flex justify-content-between mb-4 align-items-center">
    <h3 class="text-primary"><i class="bi bi-people-fill me-2"></i>Lista de Clientes</h3>
    <a href="/agregar-cliente" class="btn btn-primary shadow-sm">
        <i class="bi bi-person-plus-fill me-1"></i> Nuevo Cliente
    </a>
</div>

@if (listaClientes == null)
{
    <p><em>Cargando...</em></p>
}
else if (!listaClientes.Any())
{
    <div class="alert alert-info">No hay clientes registrados.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Apellido / Familia</th>
                    <th>Contacto</th>
                    <th>Dirección</th>
                    <th>Cuenta Banco</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in listaClientes)
                {
                    <tr>
                        <td class="fw-bold">@cliente.NombreFamilia</td>
                        <td>
                            <div><i class="bi bi-telephone me-1"></i> @cliente.Telefono</div>
                            @if (!string.IsNullOrEmpty(cliente.Email))
                            {
                                <small class="text-muted"><i class="bi bi-envelope me-1"></i> @cliente.Email</small>
                            }
                        </td>
                        <td>@cliente.Direccion</td>
                        <td>@cliente.CuentaBanco</td>
                        <td>
                            <div class="btn-group">
                                <a href="/agregar-cliente/@cliente.IdCliente" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <button class="btn btn-sm btn-outline-danger ms-1" @onclick="() => Eliminar(cliente.IdCliente)">
                                    <i class="bi bi-trash-fill"></i> Eliminar
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Cliente> listaClientes;

    protected override async Task OnInitializedAsync()
    {
        await CargarClientes();
    }

    private async Task CargarClientes()
    {
        listaClientes = await DbContext.Clientes.OrderBy(c => c.NombreFamilia).ToListAsync();
    }

    private async Task Eliminar(int id)
    {
        var cliente = await DbContext.Clientes.FindAsync(id);
        if (cliente != null)
        {
            DbContext.Clientes.Remove(cliente);
            await DbContext.SaveChangesAsync();
            await CargarClientes();
        }
    }
}